# This workflow will install Python dependencies, run tests and lint with a single version of Python
# For more information see: https://help.github.com/actions/language-and-framework-guides/using-python-with-github-actions

name: 

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

permissions:
  contents: read,write

jobs:
  build:

    runs-on: ubuntu-latest
    outputs:
      apk: ${{ steps.apkoutput.outputs.apkfile }}

    steps:
    - uses: actions/checkout@v3
    - name: Set up Python 3.10
      uses: actions/setup-python@v3
      with:
        python-version: "3.10"
    - id: setuppip
      run: |
        python3 -m pip install --upgrade pip
        sudo apt-get update
    - id: setupbuildozer
      run: |
        sudo apt-get install -y git zip unzip openjdk-13-jdk python3-pip autoconf libtool pkg-config zlib1g-dev libncurses5-dev libncursesw5-dev libtinfo5 cmake libffi-dev libssl-dev
        python3 -m pip install --upgrade buildozer
        python3 -m pip install --upgrade Cython==0.29.19 virtualenv
        export PATH=$PATH:~/.local/bin/
    - id: building
      run: python3 -m buildozer -v android debug
    - id: apkoutput
      run: echo "::set-output name=apkfile::$(cat $(find . -name "*.apk"))"
